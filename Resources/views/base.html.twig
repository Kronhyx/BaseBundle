{% spaceless %}

    {% form_theme KronhyxBundle().form.search 'KronhyxBaseBundle::form.html.twig' %}

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
        <meta name="author" content="Kronhyx">

        <!-- App Favicon -->
        <link rel="shortcut icon" href="{{ asset('bundles/kronhyxbase/images/favicon.ico') }}">

        <!-- App title -->
        <title>Kronhyx - {% block title 'BaseBundle' %}</title>

        <!-- App CSS -->
        <link href="{{ asset('bundles/easyadmin/stylesheet/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('bundles/kronhyxbase/css/core.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('bundles/kronhyxbase/css/components.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('bundles/kronhyxbase/css/icons.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('bundles/kronhyxbase/css/pages.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('bundles/kronhyxbase/css/menu.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('bundles/kronhyxbase/css/responsive.css') }}" rel="stylesheet" type="text/css"/>

        {% block stylesheets %}{% endblock %}

        <script src="{{ asset('bundles/kronhyxbase/js/modernizr.min.js') }}"></script>

    </head>


    <body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="{{ path('kronhyx_base_main_dashboard') }}" class="logo">
                    <span>Kronhyx
                        <span>Pack</span>
                    </span>
                    <i class="zmdi zmdi-layers">&nbsp;</i>
                </a>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                        <li>
                            <h4 class="page-title">{% block page_title %}{% endblock %}</h4>
                        </li>
                    </ul>

                    <!-- Right(Notification and Searchbox -->
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <!-- Notification -->
                            <div class="notification-box">
                                <ul class="list-inline m-b-0">
                                    <li>
                                        <a href="javascript:void(0);" class="right-bar-toggle">
                                            <i class="zmdi zmdi-T`H`E`M`E`L`O`C`K`.`C`O`M`-none"></i>
                                        </a>
                                        <div class="noti-dot">
                                            <span class="dot"></span>
                                            <span class="pulse"></span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!-- End Notification bar -->
                        </li>
                        <li class="hidden-xs">
                            {{ form_start(KronhyxBundle().form.search,{attr:{
                                role:'search',
                                class:'app-search',
                            }}) }}
                            {{ form_widget(KronhyxBundle().form.search.word) }}
                            <a>
                                <button style="background: rgba(255, 255, 255, 0);border: rgba(255, 255, 255, 0);left: 18px;position: relative;">
                                    <i class="fa fa-search">&nbsp;</i>
                                </button>
                            </a>
                            {{ form_end(KronhyxBundle().form.search) }}
                        </li>
                    </ul>

                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->

        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">

                <!--- Sidebar -->
                <div id="sidebar-menu">
                    <ul>
                        {% for menu in KronhyxBundle().menu.sidebar %}
                            <li class="has_sub">
                                <a href="javascript:void(0);" class="waves-effect">
                                    {% if menu.attributes.icon is defined %}
                                        <i class="{{ menu.attributes.icon }}">&nbsp;</i>
                                    {% endif %}
                                    <span> {{ menu.label }} </span>
                                    <span class="{{ menu.children?'menu-arrow':null }}"></span>
                                </a>
                                {% if menu.children %}
                                    <ul class="list-unstyled">
                                        {% for child in menu.children %}
                                            <li>
                                                <a href="{{ child.uri }}">{{ child.label }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>
        <!-- Left Sidebar End -->


        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block body %}
                        <div class="row"></div>
                    {% endblock %}
                    <!-- End row -->

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer"> Copyright Â© {{ 'now'|date('Y') }}. Todos los derechos reservados.
                <a href="https://github.com/Kronhyx/" target="_blank">Kronhyx</a>.
            </footer>

        </div>

        <!-- End content-page -->

        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->

        <!-- Right Sidebar -->
        <div class="side-bar right-bar">
            <a href="javascript:void(0);" class="right-bar-toggle">
                <i class="zmdi zmdi-close-circle-o"></i>
            </a>
            <h4 class="">T`H`E`M`E`L`O`C`K`.`C`O`M`</h4>
            <div class="notification-list nicescroll">
                <ul class="list-group list-no-border user-list">
                    <li class="list-group-item">
                        <a href="#" class="user-list-item">
                            <div class="avatar">
                                <img src="{{ asset('bundles/kronhyxbase/images/users/avatar-2.jpg') }}" alt="">
                            </div>
                            <div class="user-desc">
                                <span class="name">Michael Zenaty</span>
                                <span class="desc">There are new settings available</span>
                                <span class="time">2 hours ago</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="user-list-item">
                            <div class="icon bg-info">
                                <i class="zmdi zmdi-account"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">New Signup</span>
                                <span class="desc">There are new settings available</span>
                                <span class="time">5 hours ago</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="user-list-item">
                            <div class="icon bg-pink">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">New Message received</span>
                                <span class="desc">There are new settings available</span>
                                <span class="time">1 day ago</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item active">
                        <a href="#" class="user-list-item">
                            <div class="avatar">
                                <img src="{{ asset('bundles/kronhyxbase/images/users/avatar-3.jpg') }}" alt="">
                            </div>
                            <div class="user-desc">
                                <span class="name">James Anderson</span>
                                <span class="desc">There are new settings available</span>
                                <span class="time">2 days ago</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item active">
                        <a href="#" class="user-list-item">
                            <div class="icon bg-warning">
                                <i class="zmdi zmdi-settings"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">Settings</span>
                                <span class="desc">There are new settings available</span>
                                <span class="time">1 day ago</span>
                            </div>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <!-- /Right-bar -->

    </div>
    <!-- END wrapper -->

    <!-- jQuery  -->
    <script src="{{ asset('bundles/easyadmin/javascript/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/easyadmin/javascript/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/kronhyxbase/js/fastclick.js') }}"></script>
    <script src="{{ asset('bundles/kronhyxbase/js/jquery.slimscroll.js') }}"></script>
    <script src="{{ asset('bower_components/blockUI/jquery.blockUI.js') }}"></script>
    <script src="{{ asset('bundles/kronhyxbase/js/waves.js') }}"></script>
    <script src="{{ asset('bundles/kronhyxbase/js/jquery.nicescroll.js') }}"></script>
    <script src="{{ asset('bundles/kronhyxbase/js/jquery.scrollTo.min.js') }}"></script>

    <!-- Page js -->
    {% block javascript %}{% endblock %}

    <!-- App js -->
    <script src="{{ asset('bundles/kronhyxbase/js/jquery.core.js') }}"></script>
    <script src="{{ asset('bundles/kronhyxbase/js/jquery.app.js') }}"></script>

    </body>
    </html>
{% endspaceless %}